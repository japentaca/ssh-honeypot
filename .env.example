# ============================================
# SSH Honeypot Environment Configuration
# ============================================
# Copy this file to .env and customize as needed.
# All variables are optional - defaults will be used if not specified.
# Empty values will also trigger the use of default values.

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port to listen on for SSH connections
# Default: 2222
# Valid range: 1-65535
SSH_HONEYPOT_PORT=2222

# Host/IP address to bind to
# Default: 0.0.0.0 (all interfaces)
# Examples: 127.0.0.1 (localhost only), 192.168.1.100 (specific IP)
SSH_HONEYPOT_HOST=0.0.0.0

# SSH server banner to present to clients
# Default: SSH-2.0-OpenSSH_7.4
# This can help disguise the honeypot as a specific SSH server version
SSH_HONEYPOT_BANNER=SSH-2.0-OpenSSH_7.4

# Path to the host key file
# Default: host.key
# The key will be auto-generated if it doesn't exist
SSH_HONEYPOT_HOST_KEY_PATH=host.key

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Path to the log file for recording connection attempts
# Default: ssh_honeypot.log
# Supports relative or absolute paths
SSH_HONEYPOT_LOG_FILE=ssh_honeypot.log

# Maximum log file size before rotation (in bytes)
# Default: 10485760 (10MB)
# When exceeded, the log will be rotated with a timestamp
SSH_HONEYPOT_LOG_ROTATION_SIZE=10485760

# ============================================
# CONNECTION MANAGEMENT
# ============================================

# Maximum number of concurrent connections allowed
# Default: 100
# Helps prevent resource exhaustion
SSH_HONEYPOT_MAX_CONNECTIONS=100

# Minimum delay before closing unauthenticated connections (milliseconds)
# Default: 2000 (2 seconds)
# Adds realism by not immediately dropping connections
SSH_HONEYPOT_DELAY_MIN=2000

# Maximum delay before closing unauthenticated connections (milliseconds)
# Default: 10000 (10 seconds)
# Random delay between MIN and MAX is used
SSH_HONEYPOT_DELAY_MAX=10000

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================

# Minimum delay for authentication response (milliseconds)
# Default: 500 (0.5 seconds)
# Simulates processing time for authentication
SSH_HONEYPOT_AUTH_DELAY_MIN=500

# Maximum delay for authentication response (milliseconds)
# Default: 3500 (3.5 seconds)
# Random delay between MIN and MAX is used
SSH_HONEYPOT_AUTH_DELAY_MAX=3500

# ============================================
# FAKE SHELL CONFIGURATION
# ============================================

# Enable/disable fake shell for "successful" logins
# Default: true
# Values: true, false, 1, 0, yes, no, on, off
SSH_HONEYPOT_FAKE_SHELL_ENABLED=true

# Success rate for fake authentication (0.0 to 1.0)
# Default: 0.1 (10% of attempts will "succeed")
# Set to 0 to never allow successful logins
# Set to 1 to always allow successful logins
SSH_HONEYPOT_FAKE_SHELL_SUCCESS_RATE=0.1

# Hostname to display in fake shell
# Default: honeypot
# Used in shell prompts and system information
SSH_HONEYPOT_FAKE_SHELL_HOSTNAME=honeypot

# Operating system to report in fake shell
# Default: Ubuntu 20.04.1 LTS
# Displayed in welcome message
SSH_HONEYPOT_FAKE_SHELL_OS=Ubuntu 20.04.1 LTS

# Kernel information for uname command
# Default: Linux honeypot 5.4.0-42-generic #46-Ubuntu SMP Fri Jul 10 00:24:02 UTC 2020 x86_64 x86_64 x86_64 GNU/Linux
SSH_HONEYPOT_FAKE_SHELL_KERNEL=Linux honeypot 5.4.0-42-generic #46-Ubuntu SMP Fri Jul 10 00:24:02 UTC 2020 x86_64 x86_64 x86_64 GNU/Linux

# Credenciales específicas que siempre permiten acceso
# Default: admin:admin,root:password,test:test
# Formato: "usuario:contraseña,usuario2:contraseña2"
# Estas credenciales siempre permitirán acceso independientemente del FAKE_SHELL_SUCCESS_RATE
SSH_HONEYPOT_ALLOWED_CREDENTIALS=admin:admin,root:password,test:test

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================

# Time window for rate limiting (milliseconds)
# Default: 60000 (1 minute)
# Attempts are counted within this window
SSH_HONEYPOT_RATE_LIMIT_WINDOW=60000

# Maximum authentication attempts allowed per IP within the time window
# Default: 10
# Connections exceeding this limit will be immediately dropped
SSH_HONEYPOT_RATE_LIMIT_MAX_ATTEMPTS=10

# ============================================
# STATISTICS AND MONITORING
# ============================================

# Interval for displaying statistics (milliseconds)
# Default: 300000 (5 minutes)
# Set to 0 to disable periodic statistics display
SSH_HONEYPOT_STATS_DISPLAY_INTERVAL=300000

# Number of top items to display in statistics
# Default: 5
# Applies to top usernames, passwords, etc.
SSH_HONEYPOT_STATS_TOP_COUNT=5

# ============================================
# NOTES
# ============================================
# - All time values are in milliseconds unless otherwise specified
# - Boolean values accept: true/false, 1/0, yes/no, on/off
# - Paths can be relative to the application directory or absolute
# - Empty or undefined variables will use default values
# - Check logs for warnings about invalid configuration values